@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Employee @Model.Name</h1>



<div class="mb-3 form-group">
    <div class="mb-3 form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly type="text" class="form-control" asp-for="Name">
       
    </div>
    <div class="mb-3 form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input readonly type="text" class="form-control" asp-for="Age">
    </div>
    <div class="mb-3 form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input readonly type="text" class="form-control" asp-for="Address">
    </div>
    <div class="mb-3 form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input readonly type="text" class="form-control" asp-for="Salary">
    </div>
    <div class="mb-3 form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input readonly type="text" class="form-control" asp-for="Email">
    </div>
    <div class="mb-3 form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input readonly type="text" class="form-control" asp-for="PhoneNumber">
    </div>
    <div class="mb-3 form-group">
        <label class="col-form-label" asp-for="HireDate"></label>
        <input readonly type="text" class="form-control" asp-for="HireDate">
    </div>
    <div class="mb-3 form-check">
        <input readonly class="form-check-input" asp-for="IsActive">
        <label class="col-form-label" asp-for="IsActive"></label>
    </div>

</div>

<a value="Edit" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary ">Edit</a>
<a asp-action="Index" class="btn btn-light">Back To List</a>
