
@model IEnumerable<Department>
@{
    ViewData["title"] = "All Departments";
}
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-primary">Add New Department</a>
@if (Model.Count() > 0)
{

    <h1 class="mt-2"> Departments</h1>
    <table class="table table-striped table-hover mt-5">

        <thead> 
            <tr>
                <th scope="col">@Html.DisplayNameFor(D => D.Code)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.Name)</th>
                <th scope="col">Deails</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Department in Model)
            {
                <tr>
                    <th scope="row">@Department.Code</th>
                    <td>@Department.DateOfCreation</td>
                    <td>@Department.Name</td>

                 @* <partial name="_ButtonsPartialView" model="@dept.Id.ToString()"> *@
                         <td>
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@Department.Id"><i class=" fa-solid fa-circle-info"></i>Details</a>
                         </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Department.Id"><i class="fas fa-user-edit"></i>Edit</a>
                     </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Department.Id"><i class="fa-solid fa-trash"></i>Delete</a>
                    </td>

                </tr>
            }



        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>No Departments</h1>
    </div>
}